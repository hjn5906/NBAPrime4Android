<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:weightSum="6">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:textSize="20sp"
              android:id="@+id/nba_team_roster_name"
              android:layout_alignParentLeft="true"
              android:text="Player Name"
              android:gravity="left"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:id="@+id/nba_team_roster_position"
        android:layout_toRightOf="@+id/nba_team_roster_name"
        android:text="Position"
        android:gravity="left"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:id="@+id/nba_team_roster_age"
        android:layout_toRightOf="@+id/nba_team_roster_position"
        android:text="Age"
        android:gravity="left"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:id="@+id/nba_team_roster_height"
        android:layout_toRightOf="@+id/nba_team_roster_age"
        android:text="Height"
        android:gravity="left"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:id="@+id/nba_team_roster_weight"
        android:layout_toRightOf="@+id/nba_team_roster_height"
        android:text="Weight"
        android:gravity="left"/>


</LinearLayout>