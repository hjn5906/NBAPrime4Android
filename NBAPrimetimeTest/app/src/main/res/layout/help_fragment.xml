<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:src="@drawable/ic_team_listing"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:text="- NBA Teams"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/teamDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:text="Displays general information about each NBA team. Click an individual team to be taken to the team's roster."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="30dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="60dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/ic_leader_listing"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:text="- NBA Leader"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/leaderDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:text="Select an individual stat from the selection box and it will generate the current top 5 NBA players (playoffs not included) of that particular stat."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="120dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="60dp"/>

</RelativeLayout>