<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">

    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:id="@+id/nba_leader_name"
        android:layout_alignParentLeft="true"
        android:text="Name"
        android:gravity="center|left"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:id="@+id/nba_leader_pos"
        android:layout_toRightOf="@+id/nba_leader_name"
        android:text="Rank"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:id="@+id/nba_leader_points"
        android:layout_toRightOf="@+id/nba_leader_pos"
        android:text="Points"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />


</RelativeLayout>